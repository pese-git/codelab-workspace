# Benchmark Standalone Environment Variables

# Gateway Configuration
GATEWAY_BASE_URL=http://localhost:80
GATEWAY_WS_URL=ws://localhost:80/api/v1/ws
GATEWAY_AUTH_TYPE=internal  # internal or jwt

# Internal API Key Authentication
GATEWAY_API_KEY=change-me-in-production

# JWT Authentication (if auth_type=jwt)
GATEWAY_JWT_AUTH_URL=http://localhost:80/oauth/token
GATEWAY_JWT_USERNAME=admin@example.com
GATEWAY_JWT_PASSWORD=admin123
GATEWAY_JWT_CLIENT_ID=benchmark-client
GATEWAY_JWT_CLIENT_SECRET=

# Database
DATABASE_URL=sqlite:///data/metrics.db

# Benchmark Settings
BENCHMARK_TASKS_FILE=tasks.yaml
BENCHMARK_TEST_PROJECT=./test_project
BENCHMARK_ENABLE_VALIDATION=true

# Logging
LOG_LEVEL=INFO
